<body
  class="text-center bg-success h-100 d-flex align-items-center justify-content-center"
>

  <form style="width:400px" class="p-5 bg-light rounded" method="PATCH">
    <div class="form-group text-success m-2">
      <label for="title"><h4>Title</h4></label>
      <input
        type="text"
        class="form-control m-2"
        id="title"
        name="title"
        value="{{title}}"
      />
    </div>
    <div class="form-group text-success m-2">
      <label for="image"><h4>Thumbnail</h4></label>
      <input
        type="text"
        class="form-control mt-2"
        id="image"
        name="image"
        value="{{image}}"
      />

    </div>
    <div class="form-group text-success mt-2">
      <label for="description"><h4>Description</h4></label>
      <textarea
        class="form-control mt-2"
        id="description"
        name="description"
        rows="3"
      >{{description}}</textarea>
    </div>
    <input
      class="btn btn-success mt-4"
      type="submit"
      style="width:300px"
      value="Create note"
    />
  </form>
</body>