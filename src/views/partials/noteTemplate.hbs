<div class="col">
  <div class="card shadow-sm">
    <img src={{image}} style="height:250px;" />
    <div class="card-body">
      <h3>{{title}}</h3>
      <p class="card-text">{{description}}</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-success"><a
              href="/notes/{{_id}}/details"
            >View</a></button>
          <button type="button" class="btn btn-sm btn-outline-success"><a
              href="/notes/{{_id}}/edit"
            >Edit</a></button>
        </div>
        <small class="text-body-secondary">{{passedTime}} ago</small>
      </div>
    </div>
  </div>
</div>