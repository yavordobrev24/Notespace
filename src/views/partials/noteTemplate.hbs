<div class="col-sm-12 col-md-6" id="{{_id}}">
  <div class="card shadow-sm" id="{{_id}}">
    <div class="card-body d-flex" id="{{_id}}">
      <div
        class="date text-white color-primary d-flex justify-content-center align-items-center"
      >
        <div class="row text-center">
          <h3>{{day}}</h3>
          <h3>{{month}}</h3>
          <h3>{{year}}</h3></div>
      </div>
      <div class="card-info">
        <h5>{{title}}</h5>
        <p class="card-text">{{content}}</p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/notes/details/{{_id}}"
            >View</a>
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/notes/edit/{{_id}}"
            >Edit</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>