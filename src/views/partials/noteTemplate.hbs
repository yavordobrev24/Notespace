<div class="col">
  <div class="card shadow-sm">
    <img src={{image}} style="height:250px;" />
    <div class="card-body">
      <h3>{{title}}</h3>
      <p class="card-text">{{description}}</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button
            type="button"
            class="btn btn-sm btn-outline-secondary"
          >View</button>
          <button
            type="button"
            class="btn btn-sm btn-outline-secondary"
          >Edit</button>
        </div>
        <small class="text-body-secondary">{{currentTime}} mins</small>
      </div>
    </div>
  </div>
</div>